<div class="jumbotron">
  <h1>Team Record</h1>
</div>

  <form action="/team/record" method="post">
    <label for="win">Wins:</label>
    <input type="text" name="win">
    <label for="loss">Loss:</label>
    <input type="text" name="loss">
    <label for="draw">Draw:</label>
    <input type="text" name="draw">
  </form>

  <table class="table table-striped">

  <thead>
    <tr>
      <th>Teams Name</th>
      <th>Wins</th>
      <th>Loss</th>
      <th>Draw</th>
    </tr>
  </thead>
      <tr>
        <td><%= team.win() %></td>
        <td><%= team.loss() %></td>
        <td><%= team.draw() %></td>
      </tr>

  </table>

  <h1>Here is the team's roster</h1>

  <% if @roster.players.any?() %>
  <h3>Roster:</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Jersey Number</th>
      </tr>
    </thead>
    <% @roster.players.each() do |player| %>
    <tr>
      <td><%= player.name() %></td>
      <td><%= player.position() %></td>
      <td><%= player.number() %></td>
    </tr>
    <% end %>
  </table>
<% else %>
  <h4>There are no players on the roster yet.</h4>
<% end %>
